    <header class="navbar-fixed-top nav-header">
        <div class="webTitle">
            <a class="linkText" href="../Home/"> A E S T H E T I C </a>
        </div>
        <div class="main-nav">
            <div class="searchBarCont">
                <input class="searchArea"
                       type="search"
                       placeholder="Search The Entire Store Here..." />
                <button class="icon">
                    <i class="material-icons">search</i>
                </button>
            </div>
            <div class="navList">
                <div class="navItem">
