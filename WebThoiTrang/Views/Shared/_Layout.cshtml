        <div class="main-nav">
            <div class="searchBarCont">
                <form id="searchForm" action="@Url.Action("Search","Products")" method="GET">
                    <input type="search" class="searchArea" name="keyword" id="search" placeholder="Search The Entire Store Here..." value="@ViewBag.Keyword">
                    <button class="icon userIcon" disabled="disabled" id="iconBtn" type="submit" style="border: none; background: none; cursor: pointer; margin: 0; padding: 0;">
                        <div class="search-icon">
                            <i class="material-icons">search</i>
                        </div>
                    </button>
                </form>

                <script>
                    searchForm.addEventListener('input', () => {
                        if (search.value.length > 0) {
                            iconBtn.removeAttribute('disabled');
                        } else {
                            iconBtn.setAttribute('disabled', 'disabled');

                        }
                    });
                </script>

            </div>
            <div class="navList">
